<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/view_border_frame"
    android:padding="1dp"

   >

    <ImageView
        android:src="@drawable/beep_item_temp"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/beep_imageview"
        android:adjustViewBounds="true"
        android:contentDescription="@string/beep_image_content_description"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_gravity="bottom"
        android:background="@drawable/gradient_imageview" />
    <View
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_gravity="bottom"
        android:background="#50000000" />

    <TextView
        android:id="@+id/beep_name_textview"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"

        android:text="Best bear*"
        android:textStyle="normal|bold"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="@dimen/beep_item_name_text_size"
        android:paddingBottom="@dimen/beep_item_name_padding_top_bottom"
        android:paddingTop="@dimen/beep_item_name_padding_top_bottom"

        android:layout_gravity="bottom|center"/>
</FrameLayout>